{
   "compilerOptions": {
     "target": "es5",                          
     "module": "commonjs",
     "rootDir": "./src",                      
     "strict": true,
     "strictPropertyInitialization": false,                          
     "baseUrl": "./src",   
     "paths": {
       "@shared/*": ["shared/*"],
       "@modules/*": ["modules/*"]
     },                    
     "esModuleInterop": true,                  
     "experimentalDecorators": true,        
     "skipLibCheck": true,        
     "emitDecoratorMetadata": true,                
     "forceConsistentCasingInFileNames": true  
   }
 }